---
import { Modal } from "~/components/Modal";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Personal site of Gabor Juhasz" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="prose prose-lg prose-amber mx-auto p-8 prose-h1:text-3xl prose-h2:text-2xl">
    <slot />
    <Modal client:load />
  </body>
</html>
